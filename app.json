{
  "expo": {
    "name": "mozart_mobile_app",
    "slug": "mozart_mobile_app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/splash.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anonymous.mozart-mobile-app",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "We need access to your photo library so you can upload pictures.",
        "NSCameraUsageDescription": "We need access to your camera so you can take pictures."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/splash.png",
        "backgroundColor": "#6739B7"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "CAMERA"
      ],
      "package": "com.anonymous.mozart_mobile_app"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-font",
      "expo-document-picker",
      "expo-image-picker"
    ]
  }
}
